<p id="notice"><%= notice %></p>

<h1>Listing Competitors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Competition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @competitors.each do |competitor| %>
      <tr>
        <td><%= link_to competitor.name, competition_competitor_path(@competition, competitor)  %></td>
        <td><%= competitor.competition_id %></td>
        <td><%= link_to 'Show', competition_competitors_path(@competition) %></td>
        <td><%= link_to 'Edit', edit_competition_competitor_path(@competition, competitor) %></td>
        <td><%= link_to 'Destroy', competition_competitor_path(@competition, competitor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Competitor', new_competition_competitor_path(@competition, @competition_event) %>
